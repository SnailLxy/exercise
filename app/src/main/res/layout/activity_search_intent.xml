<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.commonintent.SearchIntentActivity">

  <EditText
      android:id="@+id/et_search_music"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:hint="请输入要搜索的内容（搜索音乐输入音乐家）"/>

  <Button
      android:id="@+id/btn_search_music"
      style="@style/FeaturesButton"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="从本地搜索音乐"
      app:layout_constraintTop_toBottomOf="@id/et_search_music" />

  <Button
      android:id="@+id/btn_search_web"
      style="@style/FeaturesButton"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="执行网页搜索"
      app:layout_constraintTop_toBottomOf="@id/btn_search_music" />
</androidx.constraintlayout.widget.ConstraintLayout>