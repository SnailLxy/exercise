<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".activity.RecentScreenActivity">

    <Button
        android:id="@+id/btn_create_new_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exercise_create_new_document"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_use_multiple_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exercise_use_multiple_tasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_create_new_document" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
